<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#97D6D0"
    tools:context=".uchinchiHARD.FirstActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/the_bomb"
        android:textColor="@color/black"
        android:text="Choose one of these"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/easy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.246" />

    <Button
        android:id="@+id/easy"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:backgroundTint="#2FCF35"
        android:fontFamily="@font/the_bomb"
        android:gravity="center"
        android:text="easy"
        app:layout_constraintBottom_toBottomOf="@+id/hardd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/medium"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#D8E83D"
        android:fontFamily="@font/the_bomb"
        android:gravity="center"
        android:text="medium"
        app:layout_constraintBottom_toBottomOf="@+id/hardd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/easy"
        app:layout_constraintVertical_bias="0.489" />

    <Button
        android:id="@+id/hardd"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#E15248"
        android:fontFamily="@font/the_bomb"
        android:gravity="center"
        android:text="hard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/easy"
        />


</androidx.constraintlayout.widget.ConstraintLayout>